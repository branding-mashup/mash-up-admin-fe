{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"]
    },
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types/*"],
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "exclude": ["./node_modules", "./dist"],
  "include": ["./src", "./@types", "**/*.config.js"]
}
